{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "incremental": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "preserve",
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules", "**/*.test.*", "**/*.spec.*", "**/*.mock.*"]
}
