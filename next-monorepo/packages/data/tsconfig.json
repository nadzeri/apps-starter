    "moduleResolution": "Bundler",
    "incremental": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "preserve",
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
